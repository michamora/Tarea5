<Window x:Class="Cap12.Capitulo12.Ejercicio2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cap12.Capitulo12"
        mc:Ignorable="d"
         Title="Ejercicio 2" Height="150" Width="300">
    <Grid>
       
        <StackPanel HorizontalAlignment="Center" Margin="20">

            <Label Content="Ingrese numero del Factorial: "/>
            <TextBox x:Name="Numero" Height="20" Width="150" HorizontalAlignment="Left"/>
            <Button x:Name="VerificarButton" Content="Verificar" Background="#FFDDA0DD" Height="20" Width="60" HorizontalAlignment="Center" Click="VerificarButton_Click"/>
            
        </StackPanel>
    </Grid>
</Window>