<Window x:Class="Cap10.Capitulo10.Ejercicio1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cap10.Capitulo10"
        mc:Ignorable="d"
        Title="Ejercicio 1" Height="500" Width="800">
    <Grid  >
        <StackPanel>
            <StackPanel HorizontalAlignment="Center">
                <Button x:Name="Datos" Content="👆🏼 Click para ingresar producto en el inventario" Background="#FF87CEFA"  Width="300" Margin="20,20,0,0" HorizontalAlignment="Left" Click="Datos_Click" />
                <Label Content="Inventario: " Margin="15,20,0,0"/>
                <ListBox x:Name="DatosInventario" Background="#FFFFF5EE" Width="600" Height="250" Margin="20,5,0,0" HorizontalAlignment="Left"/>
     
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>